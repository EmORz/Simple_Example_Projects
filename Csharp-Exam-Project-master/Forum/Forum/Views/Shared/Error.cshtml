@using Microsoft.AspNetCore.Mvc.ModelBinding;
@model ModelStateDictionary;

<div class="text-center bg-red m-5 p-10">
    @foreach (var error in Model)
    {
        foreach (var message in error.Value.Errors)
        {
            <h2 class="text-white">@message.ErrorMessage</h2>
        }
    }
</div>
<div class="text-center p-10">
    <input onclick="window.history.back()" class="mt-25 submit-button menu-bg-forum text-white" type="button" value="Back">
</div>